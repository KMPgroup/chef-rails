{
  "name": "users",
  "description": "Setting up users",
  "default_attributes": {
    "authorization": {
        "users": ["deploy"]
    }
  },
  "json_class": "Chef::Role",
  "run_list": [
    // because secure passwords are nice
    "openssl",
    // for building things
    "build-essential",
    // this is needed for users to work
    "chef-solo-search",
    // setup standard sys admin users
    "users::sysadmins",
    // make sure deploy user has sudo rights
    "sudo"
  ],
  "chef_type": "role"
}

